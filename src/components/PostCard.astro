---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article class="post-card">
  <a href={`/blog/${post.slug}`}>
    <div class="content">
      <h2 class="title">{post.data.title}</h2>
      <p class="description">{post.data.description}</p>
      
      <div class="meta">
        <div class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          <span>{post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          })}</span>
        </div>
        
        <div class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
          <span>{post.data.tags.join(', ')}</span>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background-color: #262626; /* Slightly lighter than main bg #1E1E1E */
    border: 1px solid #333;
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .post-card a {
    display: block;
    color: inherit;
    text-decoration: none;
    padding: 1.5rem;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #E5E5E5;
    margin: 0;
    line-height: 1.4;
  }

  .description {
    color: #A3A3A3;
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.6;
  }

  .meta {
    display: flex;
    gap: 1.5rem;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #737373;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-item svg {
    opacity: 0.7;
  }
</style>
